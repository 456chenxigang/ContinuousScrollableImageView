<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cunoraz.scrollingbackground.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gifSkyColor"
        android:orientation="vertical">

        <!-- for adding programatically remove these lines -->

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="right"
            app:duration="2500"
            app:imageSrc="@drawable/plane"
            app:scaleType="centerInside" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="left"
            app:duration="4000"
            app:imageSrc="@drawable/cloud" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="left"
            app:duration="6000"
            app:imageSrc="@drawable/mountain" />

    </LinearLayout>

</LinearLayout>
